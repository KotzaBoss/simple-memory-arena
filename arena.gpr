project Arena is

   for Source_Dirs use ("src_ada");
   for Object_Dir use "obj_ada";
   for Main use ("main.adb");

   package Compiler is
      for Switches ("ada") use ("-gnat2020", "-g", "-O2");
   end Compiler;

   package Pretty_Printer is
      for Default_Switches ("ada") use ("-M100");
   end Pretty_Printer;

   package Ide is
      for Vcs_Kind use "git";
   end Ide;

end Arena;

